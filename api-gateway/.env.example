# Kong API Gateway Environment Configuration

# Kong Database
KONG_DB_HOST=kong-database
KONG_DB_PORT=5432
KONG_DB_USER=kong
KONG_DB_PASSWORD=kong_password
KONG_DB_DATABASE=kong

# Kong Configuration
KONG_PROXY_LISTEN=0.0.0.0:8000, 0.0.0.0:8443 ssl
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_PLUGINS=bundled,jwt,acl,rate-limiting,cors,request-transformer,response-transformer,prometheus
KONG_LOG_LEVEL=info

# Kong Admin API
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# JWT Configuration (Must match Auth Service)
# IMPORTANT: This MUST match the JWT_SECRET in auth-service
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Konga (Admin UI)
KONGA_NODE_ENV=development
KONGA_TOKEN_SECRET=some-secret-token-change-in-production

# Rate Limiting
RATE_LIMIT_MINUTE=100
RATE_LIMIT_HOUR=1000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://react-admin:3000
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# Service URLs (Internal)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3003
CARRIER_SERVICE_URL=http://carrier-service:3004
CUSTOMER_SERVICE_URL=http://customer-service:3005
PRICING_SERVICE_URL=http://pricing-service:3006
TRANSLATION_SERVICE_URL=http://translation-service:3007

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
