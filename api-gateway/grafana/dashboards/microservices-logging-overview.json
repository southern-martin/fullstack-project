{
  "dashboard": {
    "title": "Microservices Logging Overview",
    "tags": ["microservices", "logging", "winston", "correlation-id"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "timeseries",
        "title": "Log Volume by Service",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (service) (rate({service=~\"auth-service|user-service|customer-service|carrier-service|pricing-service|translation-service\"} | json [1m]))",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "pointSize": 5
            },
            "unit": "logs/sec"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["lastNotNull", "max"]
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Error Rate (Last 5m)",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate({service=~\".*\"} | json | level=\"error\" [5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 0.1,
                  "color": "yellow"
                },
                {
                  "value": 1,
                  "color": "red"
                }
              ]
            },
            "unit": "errors/sec"
          }
        },
        "options": {
          "textMode": "value_and_name",
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Total Requests (Last 5m)",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate({service=~\".*\"} | json | metadata_type=\"http_request\" [5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "blue"
                }
              ]
            },
            "unit": "req/sec"
          }
        },
        "options": {
          "textMode": "value_and_name",
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "type": "bargauge",
        "title": "Service Health Status",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum by (service) (count_over_time({service=~\".*\"} | json [1m]))",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            },
            "unit": "logs"
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Average Response Time by Service",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "avg by (service) (avg_over_time({service=~\".*\"} | json | metadata_responseTime != \"\" | unwrap metadata_responseTime [1m]))",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "pointSize": 5
            },
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 100,
                  "color": "yellow"
                },
                {
                  "value": 500,
                  "color": "red"
                }
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max"]
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 6,
        "type": "table",
        "title": "Top 10 Slow Endpoints (Last Hour)",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "{service=~\".*\"} | json | metadata_responseTime > 100 | line_format \"{{.service}} {{.metadata_method}} {{.metadata_url}} {{.metadata_responseTime}}ms\"",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [
                {
                  "field": "Time",
                  "desc": true
                }
              ]
            }
          },
          {
            "id": "limit",
            "options": {
              "limitField": 10
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": []
        }
      },
      {
        "id": 7,
        "type": "logs",
        "title": "Recent Errors (All Services)",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "{service=~\".*\"} | json | level=\"error\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "HTTP Status Codes Distribution",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (metadata_statusCode) (rate({service=~\".*\"} | json | metadata_statusCode != \"\" [1m]))",
            "refId": "A",
            "legendFormat": "{{metadata_statusCode}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80,
              "stacking": {
                "mode": "normal"
              }
            },
            "unit": "req/sec"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "type": "table",
        "title": "Active Correlation IDs (Last 15 minutes)",
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "{service=~\".*\"} | json | metadata_correlationId != \"\" | line_format \"{{.metadata_correlationId}} | {{.service}} | {{.metadata_method}} {{.metadata_url}}\"",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "sortBy",
            "options": {
              "sort": [
                {
                  "field": "Time",
                  "desc": true
                }
              ]
            }
          },
          {
            "id": "limit",
            "options": {
              "limitField": 20
            }
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": []
        }
      },
      {
        "id": 10,
        "type": "heatmap",
        "title": "Response Time Distribution Heatmap",
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "{service=~\".*\"} | json | metadata_responseTime != \"\" | unwrap metadata_responseTime",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              },
              "scaleDistribution": {
                "type": "linear"
              }
            }
          }
        },
        "options": {
          "calculate": true,
          "cellGap": 2,
          "color": {
            "mode": "scheme",
            "scheme": "Spectral",
            "steps": 128
          },
          "yAxis": {
            "unit": "ms"
          }
        }
      },
      {
        "id": 11,
        "type": "piechart",
        "title": "Requests by Service (Last Hour)",
        "gridPos": {
          "x": 0,
          "y": 40,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (service) (count_over_time({service=~\".*\"} | json | metadata_type=\"http_request\" [1h]))",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 12,
        "type": "stat",
        "title": "Unique Correlation IDs (Last Hour)",
        "gridPos": {
          "x": 8,
          "y": 40,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "count(count by (metadata_correlationId) (count_over_time({service=~\".*\"} | json | metadata_correlationId != \"\" [1h])))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "blue"
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "textMode": "value_and_name",
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 13,
        "type": "timeseries",
        "title": "Log Levels by Service",
        "gridPos": {
          "x": 16,
          "y": 40,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (level, service) (rate({service=~\".*\"} | json [1m]))",
            "refId": "A",
            "legendFormat": "{{service}} - {{level}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            },
            "unit": "logs/sec"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      }
    ]
  },
  "overwrite": true,
  "folderId": 0,
  "message": "Phase 14 - Microservices Logging Overview Dashboard"
}
