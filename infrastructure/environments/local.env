# ==========================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ==========================================
# This file is for local development using docker-compose
# Secrets are loaded from infrastructure/secrets/secrets.yaml

# Environment
NODE_ENV=development
ENVIRONMENT=local

# ==========================================
# SHARED DATABASE (Auth + User Services)
# ==========================================
DB_HOST=shared-user-db
DB_PORT=3306
DB_USERNAME=shared_user
DB_PASSWORD=${SHARED_DB_PASSWORD}
DB_NAME=shared_user_db

# Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=60000

# ==========================================
# SHARED REDIS (All Services)
# ==========================================
REDIS_HOST=shared-redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TTL=3600

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# SERVICE PORTS
# ==========================================
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3003
CARRIER_SERVICE_PORT=3004
CUSTOMER_SERVICE_PORT=3005
PRICING_SERVICE_PORT=3006
TRANSLATION_SERVICE_PORT=3007
REACT_ADMIN_PORT=3000

# ==========================================
# SERVICE URLS (Internal Docker Network)
# ==========================================
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3003
CARRIER_SERVICE_URL=http://carrier-service:3004
CUSTOMER_SERVICE_URL=http://customer-service:3005
PRICING_SERVICE_URL=http://pricing-service:3006
TRANSLATION_SERVICE_URL=http://translation-service:3007
FRONTEND_URL=http://localhost:3000

# ==========================================
# BUSINESS SERVICE DATABASES
# ==========================================
# Customer Service DB
CUSTOMER_DB_HOST=customer-service-db
CUSTOMER_DB_PORT=3306
CUSTOMER_DB_USERNAME=customer_user
CUSTOMER_DB_PASSWORD=${CUSTOMER_DB_PASSWORD}
CUSTOMER_DB_NAME=customer_service_db

# Carrier Service DB
CARRIER_DB_HOST=carrier-service-db
CARRIER_DB_PORT=3306
CARRIER_DB_USERNAME=carrier_user
CARRIER_DB_PASSWORD=${CARRIER_DB_PASSWORD}
CARRIER_DB_NAME=carrier_service_db

# Pricing Service DB
PRICING_DB_HOST=pricing-service-db
PRICING_DB_PORT=3306
PRICING_DB_USERNAME=pricing_user
PRICING_DB_PASSWORD=${PRICING_DB_PASSWORD}
PRICING_DB_NAME=pricing_service_db

# ==========================================
# LOGGING & MONITORING
# ==========================================
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_CONSOLE_LOGGING=true

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ==========================================
# API CONFIGURATION
# ==========================================
API_PREFIX=api/v1
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
