# Production environment configuration for VM deployment
# Copy this to .env and update with your values

# ==================== Database Configuration ====================

# Shared Database (Auth + User Services)
SHARED_DB_HOST=shared-user-db
SHARED_DB_PORT=3306
SHARED_DB_NAME=shared_user_db
SHARED_DB_USER=appuser
SHARED_DB_PASSWORD=CHANGE_ME_WILL_BE_GENERATED
SHARED_DB_ROOT_PASSWORD=CHANGE_ME_WILL_BE_GENERATED

# Customer Service Database
CUSTOMER_DB_HOST=customer-db
CUSTOMER_DB_PORT=3306
CUSTOMER_DB_NAME=customer_db
CUSTOMER_DB_USER=appuser
CUSTOMER_DB_PASSWORD=CHANGE_ME_WILL_BE_GENERATED
CUSTOMER_DB_ROOT_PASSWORD=CHANGE_ME_WILL_BE_GENERATED

# Carrier Service Database
CARRIER_DB_HOST=carrier-db
CARRIER_DB_PORT=3306
CARRIER_DB_NAME=carrier_db
CARRIER_DB_USER=appuser
CARRIER_DB_PASSWORD=CHANGE_ME_WILL_BE_GENERATED
CARRIER_DB_ROOT_PASSWORD=CHANGE_ME_WILL_BE_GENERATED

# Pricing Service Database
PRICING_DB_HOST=pricing-db
PRICING_DB_PORT=3306
PRICING_DB_NAME=pricing_db
PRICING_DB_USER=appuser
PRICING_DB_PASSWORD=CHANGE_ME_WILL_BE_GENERATED
PRICING_DB_ROOT_PASSWORD=CHANGE_ME_WILL_BE_GENERATED

# ==================== Redis Configuration ====================
REDIS_HOST=shared-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_WILL_BE_GENERATED

# ==================== JWT Configuration ====================
JWT_SECRET=CHANGE_ME_WILL_BE_GENERATED
JWT_REFRESH_SECRET=CHANGE_ME_WILL_BE_GENERATED
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ==================== API URLs (Replace example.com with your domain) ====================
REACT_APP_AUTH_API_URL=https://example.com/api/v1/auth
REACT_APP_USER_API_URL=https://example.com/api/users
REACT_APP_CUSTOMER_API_URL=https://example.com/api/customers
REACT_APP_CARRIER_API_URL=https://example.com/api/carriers
REACT_APP_PRICING_API_URL=https://example.com/api/pricing
REACT_APP_TRANSLATION_API_URL=https://example.com/api/translations

# ==================== Environment ====================
NODE_ENV=production
LOG_LEVEL=info
ENABLE_CORS=true

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==================== Session Configuration ====================
SESSION_SECRET=CHANGE_ME_WILL_BE_GENERATED
SESSION_EXPIRATION=86400000

# ==================== Email Configuration (Optional) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com

# ==================== Feature Flags ====================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_AUDIT_LOG=true
ENABLE_PROFILING=false
